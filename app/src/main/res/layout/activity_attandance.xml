<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Attandance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background2"
    tools:context=".Attandance">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/Background1"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textbody1"

        android:text="Attandance Center:-2"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="88dp"
        android:background="@color/Background1"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:text="class 4:"

        android:textColor="@color/textbody1"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/cla4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"

        android:textColor="@color/textbody1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="137dp"
        android:background="@color/Background1"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:text="class 5:"

        android:textColor="@color/textbody1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cla5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="137dp"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"

        android:textColor="@color/textbody1"
        android:textSize="20dp" />



    <TextView
        android:id="@+id/cl6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="184dp"
        android:background="@color/Background1"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:text="class 6:"

        android:textColor="@color/textbody1"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/cla6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="184dp"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"

        android:textColor="@color/textbody1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cl7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="226dp"
        android:background="@color/Background1"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:text="class 7:"

        android:textColor="@color/textbody1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cla7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="100dp"
        android:layout_marginTop="226dp"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"

        android:textColor="@color/textbody1"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/daytoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="265dp"
        android:hint="first enter day ex 'mon'"></EditText>


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="265dp"
        android:alpha=".80"
        android:onClick="today"
        android:text="Enter Day first"
        android:textSize="10dp" />

    <CheckBox
        android:id="@+id/clas4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="onCheckboxClicked"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="88dp"></CheckBox>

    <CheckBox
        android:id="@+id/clas5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:layout_alignRight="@id/cla5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="137dp"></CheckBox>


    <CheckBox
        android:id="@+id/clas6"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:layout_alignRight="@id/cla6"
        android:layout_marginTop="184dp"></CheckBox>


    <CheckBox
        android:id="@+id/clas7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/cla7"
        android:onClick="onCheckboxClicked"
        android:layout_alignParentRight="true"
        android:layout_marginTop="226dp"></CheckBox>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="submitattandance"
        android:text="submit"
        android:visibility="invisible"></Button>

    <EditText
        android:id="@+id/date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="320dp"
        android:hint="dd/mm/yy"></EditText>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="320dp"

        android:layout_marginRight="2dp"
        android:onClick="submitDate"
        android:text="Enter Date" />


</RelativeLayout>